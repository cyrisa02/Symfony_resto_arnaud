{% extends 'base.html.twig' %}

{% block title %}Carte
{% endblock %}

{% block body %}
	<div class="mt-4 container">
		<h1>Carte</h1>

		<table class="table">
			<thead>
				<tr>

					<th>Nom</th>
					<th>Description</th>
					<th>Categorie</th>
					<th>Prix</th>

				</tr>
			</thead>
			<tbody>
				{% for meal in meals %}
					<tr>

						<td>{{ meal.title }}</td>
						<td>{{ meal.description }}</td>
						<td>{{ meal.category.title }}</td>
						<td>{{ meal.price }}
							€</td>

					</tr>
				{% else %}
					<tr>
						<td colspan="6">Pas de plats</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

	<div class="text-center">
		<a href="{{ path ('app_reservation_new') }}" class="btn btn-primary mt-4">Réserver une table</a>

	</div>
</div>
<div class="mt-4 container">
	<h1 class="text-center">Nos</h1>
	<h1 class="text-center">Horaires d'ouverture</h1>

	<hr>
	<table class="table text-center">

		<thead>
			<tr>
				<th></th>
				<th></th>
			</tr>
		</thead>

		<tbody>
			{% for schedule in schedules %}
				<tr>
					<td>Lundi</td>
					<td>{{ schedule.monday }}</td>
				</tr>
				<tr>
					<td></td>
					<td>{{ schedule.evmonday }}</td>
				</tr>
				<tr>
					<td>Mardi</td>
					<td>{{ schedule.tuesday }}</td>
				</tr>
				<tr>
					<td></td>
					<td>{{ schedule.evtuesday }}</td>
				</tr>
				<tr>
					<td>Mercredi</td>
					<td>{{ schedule.wednesday }}</td>
				</tr>
				<tr>
					<td></td>
					<td>{{ schedule.evwednesday }}</td>
				</tr>
				<tr>
					<td>Jeudi</td>
					<td>{{ schedule.thursday }}</td>
				</tr>
				<tr>
					<td></td>
					<td>{{ schedule.evthursday }}</td>
				</tr>
				<tr>
					<td>Vendredi</td>
					<td>{{ schedule.friday }}</td>
				</tr>
				<tr>
					<td></td>
					<td>{{ schedule.evfriday }}</td>
				</tr>
				<tr>
					<td>Samedi</td>
					<td>{{ schedule.saturday }}</td>
				</tr>
				<tr>
					<td></td>
					<td>{{ schedule.evsaturday }}</td>
				</tr>
				<tr>
					<td>Dimanche</td>
					<td>{{ schedule.sunday }}</td>
				</tr>
				<tr>
					<td></td>
					<td>{{ schedule.evsunday }}</td>
				</tr>
			{% endfor %}

		</tbody>
	</table>
</div>{% endblock %}
