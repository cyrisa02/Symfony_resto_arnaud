{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}

	<style>
		.card-title {
			opacity: 0.1;
			transition: 0.3s
		}
		.card-title:hover {
			opacity: 1
		}
	</style>
	<div class="jumbotron">

		<p>Nombre de clients maximal:
			{{ max_client - 2}}
			- 2</p>


		<h1 class="display-4">Hello, world!, Mettre les horaires sur les pages visibles!!!</h1>
		<p class="lead">This is a simple hero unit, a simple jumbotron-style component for calling extra attention to featured content or information.</p>
		<hr class="my-4">
		<p>It uses utility classes for typography and spacing to space content out within the larger container.</p>
		<a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>

		<div class="row mt-4">
			{% for meal in meals |reverse %}
				<div class="col-md-4">
					<div class="card mt-4">
						<img src="{{ asset('uploads/') }}{{ meal.picture }}" alt="{{ meal.title }} " style="max-width: 10rem;">

						<div class="card-body">
							<h5 class="card-title">{{meal.title}}</h5>
							<p class="card-text">Descript.:
								{{ meal.description | u.truncate(20) }}...</p>


							<p class="card-text">Prix:
								{{meal.price}}
								€
							</p>

							{% if app.user %}

								<div class="text-center">
									<a href="{{ path('app_userreservation_edit', {'id': app.user.id}) }}" class="btn btn-primary mt-4">Réserver votre  table</a>
								</div>
							{% else %}
								<div class="text-center">
									<a href="{{ path ('app_reservation_new') }}" class="btn btn-primary mt-4">Réserver une table</a>

								</div>


							{% endif %}

						</div>
					</div>
				</div>
			{% else %}
				<tr>
					<td colspan="11">Pas de données</td>
				</tr>

			{% endfor %}
		</div>
		{% if app.user %}


			<div class="text-center">
				<a href="{{ path('app_userreservation_edit', {'id': app.user.id}) }}" class="btn btn-primary mt-4">Réserver votre  table</a>
			</div>
		{% else %}
			<div class="text-center">
				<a href="{{ path ('app_reservation_new') }}" class="btn btn-primary mt-4">Réserver une table</a>

			</div>


		{% endif %}

	</div>
	<div class="mt-4 container">
		<h1 class="text-center">Nos</h1>
		<h1 class="text-center">Horaires d'ouverture</h1>

		<hr>
		<table class="table text-center">

			<thead>
				<tr>
					<th></th>
					<th></th>
				</tr>
			</thead>

			<tbody>
				{% for schedule in schedules %}
					<tr>
						<td>Lundi</td>
						<td>{{ schedule.monday }}</td>
					</tr>
					<tr>
						<td></td>
						<td>{{ schedule.evmonday }}</td>
					</tr>
					<tr>
						<td>Mardi</td>
						<td>{{ schedule.tuesday }}</td>
					</tr>
					<tr>
						<td></td>
						<td>{{ schedule.evtuesday }}</td>
					</tr>
					<tr>
						<td>Mercredi</td>
						<td>{{ schedule.wednesday }}</td>
					</tr>
					<tr>
						<td></td>
						<td>{{ schedule.evwednesday }}</td>
					</tr>
					<tr>
						<td>Jeudi</td>
						<td>{{ schedule.thursday }}</td>
					</tr>
					<tr>
						<td></td>
						<td>{{ schedule.evthursday }}</td>
					</tr>
					<tr>
						<td>Vendredi</td>
						<td>{{ schedule.friday }}</td>
					</tr>
					<tr>
						<td></td>
						<td>{{ schedule.evfriday }}</td>
					</tr>
					<tr>
						<td>Samedi</td>
						<td>{{ schedule.saturday }}</td>
					</tr>
					<tr>
						<td></td>
						<td>{{ schedule.evsaturday }}</td>
					</tr>
					<tr>
						<td>Dimanche</td>
						<td>{{ schedule.sunday }}</td>
					</tr>
					<tr>
						<td></td>
						<td>{{ schedule.evsunday }}</td>
					</tr>
				{% endfor %}

			</tbody>
		</table>

	</div>
{% endblock %}
