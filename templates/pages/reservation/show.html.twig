{% extends 'base.html.twig' %}

{% block title %}Réservation
{% endblock %}

{% block body %}
	<div class="mt-4 container">
		<h1>Réservation</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Date</th>
					<td>{{ reservation.date ? reservation.date|date('d-m-Y') : '' }}</td>
				</tr>
				<tr>
					<th>Nbre de couverts</th>
					<td>{{ reservation.clientNumber }}</td>
				</tr>
				<tr>
					<th>Heure</th>
					<td>{{ reservation.time }}</td>
				</tr>
				<tr>
					<th>Allergie</th>
					<td>{{ reservation.isAllergy ? 'Oui' : 'Non' }}</td>
				</tr>
			</tbody>
		</table>

		<a class="btn btn-secondary btn-lg mt-4" href="{{ path('app_reservation_index') }}">Retour à la liste</a>


		<a class="btn btn-primary btn-lg mt-4 ms-4" href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">Modifier</a>


		{{ include('pages/reservation/_delete_form.html.twig') }}</div>

{% endblock %}
